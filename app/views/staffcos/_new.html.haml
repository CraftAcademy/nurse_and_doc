- content_for :modal_content do
    .list-grid
        .form-header Staffing Companies
        = form_with scope: :staffco, url: staffcos_path, id: :create_sc do |form|
            #error_messages
            = form.label :name
            = form.text_field :name, class: "add-field-placeholder"
            %br
            = form.label :personal_name
            = form.text_field :personal_name, class: "add-field-placeholder"
            %br
            = form.label :phone
            = form.text_field :phone, class: "add-field-placeholder"
            %br
            = form.label :email
            = form.text_area :email, class: "add-field-placeholder"
            %br
            = form.label :webhook
            = form.text_area :webhook, class: "add-field-placeholder"
            %br
            = form.submit value: "Add Company", class: "signup-button"
            = button_tag 'Cancel', id: 'cancel_modal', class: 'signup-button'
= render partial: 'partials/modal'