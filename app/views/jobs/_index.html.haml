.list-card
  .form-header Jobs
  .list-item.flex
  - @jobs.each do |job|
    .list-grid  
      .list-name= job.profession
      .item-info= "Hospital: #{job.hospital}"
      .item-info= "Department: #{job.department}"
      .item-info= "Start: #{job.date_start}"
      .item-info= "Deadline: #{job.application_deadline}"

      .list-button-area
        %button.button Remove
  .list-grid
    .list-button-area
      = link_to "Add New Job", new_job_path, class: "button text-center", remote: true
