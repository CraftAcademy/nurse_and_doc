.card
  .inner-card
    .card-title
      %h1 Hospitals 
    #list-item.flex
    - @hospitals.each do |hospital|
      #form-name
        %p= hospital.name
      #form-button
        %button.button Remove
    .add-field
      %input.add-field-placeholder{placeholder: "Add Hospitals"}
      %button.button Add 
          - @categories.each do |category|
          = link_to category.name, root_path(category: category.id)
              .articlelist
            - @articles.each do |article|
         %div{id: dom_id(article)}
            #header
              %p= article.header
