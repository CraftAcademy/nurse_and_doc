.list-card
  .form-header Hospitals 
  #list-item.flex
  - @hospitals.each do |hospital|
    #list-grid
      #list-name= hospital.name
      #list-button-area
        %button.button Remove
  #list-grid 
  = form_with url: hospitals_path, scope: :hospital  do |form|
    %input.form-input-field{placeholder: "Add Hospitals"}
      #list-button-area
        %button
          = form.submit value: "Add Hospital", class: "button text-center"
  

