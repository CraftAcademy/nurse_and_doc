.list-card
  .inner-card
    = button_tag 'X', id: 'cancel_modal', class: "cancel-button"
  .form-header Hospitals 
  .list-item.flex
  - @hospitals.each do |hospital|
    .list-grid
      .list-name= hospital.name
      .list-button-area
        %button.button Remove
        = link_to "Show", departments_path, class: "button text-center", remote: true
  = form_with url: hospitals_path, scope: :hospital  do |f|
    .list-grid
      .list-name
        = f.text_field :name, id: "Name", class: "form-input-field"
      .list-button-area
        = f.submit value: "Add Hospital", class: "button text-center"