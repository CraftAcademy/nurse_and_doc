#rightbar
  .list-card
    .form-header Departments 
    .list-item.flex
    - @hospital.departments.each do |department|
      .list-grid
        .list-name= department.name
        .list-button-area
          %button.button Remove
    = form_with url: department_path, scope: :hospital  do |f|
      = f.hidden_fiels :hospital, value: @hospital.id
    .list-grid
      .list-name
        = f.text_field :name, id: "Name", class: "form-input-field"
      .list-button-area
        = f.submit value: "Add Hospital", class: "button text-center"