
- content_for :modal_content do 
  .login-card
    .card-background
      .card-text
        %h2 Add new RSC user
      = form_with scope: :user, url: users_path, local: true do |form|
        .field
          = form.label :email, class: "form-label"
        .field
          = form.text_field :email, class: "form-field", autofocus: true, autocomplete: "email"
        .field
          = form.submit "Create account", class: "signup-button"
          = button_tag 'Cancel', id: 'cancel_modal', class: 'signup-button'
= render partial: 'partials/modal'