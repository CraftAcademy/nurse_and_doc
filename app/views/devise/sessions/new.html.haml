.login-card
  .card-background
    .card-text
      %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, class: "email-label"
        %br/
        = f.email_field  :email, class: "email-field", autofocus: true, autocomplete: "email"
      .field
        = f.label :password, class: "email-label"
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "password-field"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me, class: "email-label"
      = f.submit "Log in", class: "signup-button"
      = render "devise/shared/links"
