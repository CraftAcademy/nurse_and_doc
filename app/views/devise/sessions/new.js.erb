

<% content_for :extras do %>
  <%= button_tag 'X', id: 'cancel_modal', class: "cancel-button" %>
<% end %>



var templateContent = '<%= escape_javascript(render partial: 'new') %>'
displayModal(templateContent)

var form = document.getElementById('user_login')

form.addEventListener('ajax:error', (event) => {
    let errorMessageDisplayElement = document.getElementById('error_messages')
    let message = event.detail[0].message
    errorMessageDisplayElement.innerHTML = message
})

